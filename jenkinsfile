pipeline {   
    environment { 
        registry = "soumiatamrani/tp4"
        registryCredential = 'jenkkkkins'
    } 

    agent any   

    stages { 
        stage('Cloning Git') {       
            steps { 
                git branch: 'main', url: 'https://github.com/Soumia-tamrani/tp4devops' 
            } 
        } 

        stage('Building image') {       
            steps {         
                script { 
                    dockerImage = docker.build("${registry}:${BUILD_NUMBER}")
                } 
            } 
        } 

        stage('Test image') { 
            steps {         
                script { 
                    echo "Tests passed" 
                } 
            } 
        } 

        stage('Publish Image') {       
            steps {         
                script { 
                    docker.withRegistry('', registryCredential) { 
                        dockerImage.push()
                        dockerImage.push('latest') // Optionnel : met Ã  jour le tag latest
                    } 
                } 
            } 
        } 

        stage('Deploy image') {
            steps {
                script {
                    echo "Deploying..."
                    sh "docker run -d -p 80:80 ${registry}:${BUILD_NUMBER}"
                }
            }
        }
    } 
}
